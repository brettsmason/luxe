{
  "name": "brettsmason/luxe",
  "type": "wordpress-theme",
  "description": "Luxe is a WordPress starter theme using a modern workflow and best practices.",
  "keywords": [
    "wordpress"
  ],
  "homepage": "https://github.com/brettsmason/luxe",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Brett Mason",
      "email": "brettsmason@gmail.com",
      "homepage": "https://github.com/brettsmason"
    }
  ],
  "autoload": {
    "psr-4": {
      "Luxe\\": "app/"
    }
  },
  "require": {
    "php": ">=7.4",
    "composer/installers": "~1.0",
    "themehybrid/hybrid-core": "^6.0.0",
    "themehybrid/hybrid-attr": "^1.0.0",
    "timber/timber": "2.0.0-alpha.2"
  },
  "require-dev": {
    "php": ">=7.4",
    "wp-coding-standards/wpcs": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpcompatibility/php-compatibility": "*"
  },
  "scripts": {
    "install-codestandards": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    ],
    "post-install-cmd": [
      "@install-codestandards"
    ]
  }
}
