{
  "files": {
    "styles": [
      "screen.scss",
      "editor.scss"
    ],
    "scripts": [
      "app.js",
      "customize-controls.js",
      "customize-preview.js"
    ]
  },
  "browserSyncUrl": "theme-development.localhost",
  "externals": {
    "jquery": "jQuery"
  },
  "sassSettings": {
    "outputStyle": "expanded",
    "indentType": "tab",
    "indentWidth": "1"
  },
  "watchFiles": [
    "public/**/*",
    "resources/views/**/*.php",
    "app/**/*.php",
    "*.php"
  ],
  "publicPath": "public",
  "source": {
    "styles": "resources/scss",
    "scripts": "resources/js",
    "images": "resources/img",
    "svg": "resources/svg",
    "fonts": "resources/fonts"
  },
  "dist": {
    "styles": "css",
    "scripts": "js",
    "images": "img",
    "svg": "svg",
    "fonts": "fonts"
  }
}
