{
  "name": "luxe",
  "version": "1.0.0",
  "description": "A starter theme for WordPress.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "hot": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:styles": "stylelint './resources/styles/**/*.scss' --syntax scss --fix",
    "lint:scripts": "eslint './resources/scripts/**/*.js'",
    "i18n": "npm run i18n:textdomain && npm run i18n:pot",
    "i18n:textdomain": "npx wpi18n addtextdomain --exclude=vendor,node_modules",
    "i18n:pot": "npx wpi18n makepot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brettsmason/luxe.git"
  },
  "author": "Brett Mason",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/brettsmason/luxe/issues"
  },
  "homepage": "https://github.com/brettsmason/luxe#readme",
  "devDependencies": {
    "browser-sync": "^2.24.4",
    "browser-sync-webpack-plugin": "2.2.2",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-webpack-plugin": "^2.1.5",
    "laravel-mix": "^2.1.0",
    "node-wp-i18n": "github:cedaro/node-wp-i18n#develop",
    "nth-grid": "github:brettsmason/nth-grid",
    "postcss-preset-env": "^5.1.0",
    "sass-mq": "^5.0.0",
    "stylelint": "^9.2.1",
    "stylelint-config-wordpress": "^13.0.0",
    "stylelint-order": "^0.8.1"
  }
}
