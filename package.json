{
  "name": "luxe",
  "version": "1.0.0",
  "description": "A starter theme for WordPress.",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "hot": "NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:styles": "stylelint './resources/styles/**/*.scss' --syntax scss",
    "lint:scripts": "eslint './resources/scripts/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brettsmason/luxe.git"
  },
  "author": "Brett Mason",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/brettsmason/luxe/issues"
  },
  "homepage": "https://github.com/brettsmason/luxe#readme",
  "devDependencies": {
    "browser-sync": "^2.24.4",
    "browser-sync-webpack-plugin": "2.0.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.6",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-webpack-plugin": "^2.1.5",
    "laravel-mix": "^2.1.0",
    "nth-grid": "github:brettsmason/nth-grid",
    "postcss-preset-env": "^5.1.0",
    "sass-mq": "^4.0.2"
  }
}
