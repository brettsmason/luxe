{% extends 'base.twig' %}

{% block content %}
	{% for post in posts %}
		{% include ['tease-' ~ post.post_type ~ '.twig', 'tease.twig'] %}
	{% endfor %}

	{% include 'components/pagination.twig' with {
		pagination: posts.pagination({
			show_all: false,
			mid_size: 3,
			end_size: 2
		})
	} %}
{% endblock %}
